@model RegisterViewModel;

@section Styles{
    <style>
        body {
            background-color: white;
        }

        .card {
            border: none;
            border-radius: 20px;
            box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.5);
            transition: box-shadow 0.3s, transform 0.3s;
        }

            .card:hover {
                box-shadow: 40px 40px 40px rgba(1, 1,1, 1);
                transform: translate(-5px, -5px);
            }


        .shadow-on-touch {
            transition: box-shadow 2.3s;
        }

            .shadow-on-touch:hover, .shadow-on-touch:active {
                box-shadow: 20px 20px 10px rgba(0, 0, 0, 4.5);
            }


        .card-header {
            background: #21C7C7;
            border-radius: 20px 20px 0 0;
            color: #fff;
            text-align: center;
        }

        .form-group {
            transition: box-shadow 1.3s;
        }

            .form-group:hover, .form-group:focus-within {
                box-shadow: 20px 20px 10px rgba(0, 0, 0, 0.5);
            }

        .form-control {
            border-radius: 20px;
            border: 1px solid #ced4da;
        }

        .btn-primary {
            background: #21C7C7;
            border: none;
            border-radius: 20px;
        }

            .btn-primary:hover,
            .btn-primary:active {
                font-size: 40px;
            }

            .btn-primary:hover {
                background: #0e9c9c;
            }

        .form-check-input[type="checkbox"] {
            transform: scale(1.5); /* Adjust the scale value to change size */
            outline: 1px solid black; /* Set the outline color to black */
        }
            /* Change checkbox color */
            .form-check-input[type="checkbox"]:checked {
                background-color: blue; /* Change to desired color */
                border-color: black; /* Change to desired color */
                border-width: 1px; /* Adjust the border width as needed */
            }

    </style>
}

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-header">
                        <h2 style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color: black; text-shadow: 2px 2px 4px rgba(33, 199, 199, 0.5);">Qeydiyyat <i class="fas fa-user-plus" style="color: black;"></i></h2>
                    </div>
                    <div class="card-body">

                        @Html.ValidationSummary(true,"",new {@class="text-danger"})
                        <form asp-controller="Account" asp-action="Register" method="post" >
                            <div class="form-group">
                                <label for="userName">Username <span style="color: red;">*</span></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    <input asp-for="UserName" class="form-control" id="userName" placeholder="Enter your username" required>
                                    <div class="invalid-feedback">Please enter a username.</div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="firstName">Ad <span style="color: red;">*</span></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    <input asp-for="FirstName" class="form-control" id="firstName" placeholder="Adınızı daxil edin" required>
                                    <div class="invalid-feedback">Zəhmət olmasa adınızı daxil edin.</div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="lastName">Soyad <span style="color: red;">*</span></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    <input asp-for="LastName" class="form-control" id="lastName" placeholder="Soyadınızı daxil edin" required>
                                    <div class="invalid-feedback">Zəhmət olmasa soyadınızı daxil edin.</div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="email">Email Ünvanı <span style="color: red;">*</span></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                    </div>
                                    <input asp-for="Email" type="email" class="form-control" id="email" placeholder="Email ünvanınızı daxil edin" required>
                                    <div class="invalid-feedback">Zəhmət olmasa etibarlı bir email daxil edin.</div>
                                </div>
                            </div>
                        <div class="form-group">
                            <label for="password">Şifrə <span style="color: red;">*</span></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                </div>
                                <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Şifrənizi daxil edin" required>
                                <span class="input-group-text toggle-password" onclick="togglePasswordVisibility('password', 'passwordToggleIcon')">
                                    <i class="fas fa-eye" id="passwordToggleIcon"></i>
                                </span>
                                <span style="color:red" asp-validation-for="Password"></span>
                                <div class="invalid-feedback">Zəhmət olmasa bir şifrə daxil edin.</div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="confirmPassword">Şifrəni təsdiqlə <span style="color: red;">*</span></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                </div>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword" placeholder="Şifrənizi təkrar daxil edin" required>
                                <span class="input-group-text toggle-password" onclick="togglePasswordVisibility('confirmPassword', 'confirmPasswordToggleIcon')">
                                    <i class="fas fa-eye" id="confirmPasswordToggleIcon"></i>
                                </span>
                                <span style="color:red" asp-validation-for="ConfirmPassword"></span>
                                <div class="invalid-feedback">Zəhmət olmasa şifrənizi təsdiqləyin.</div>
                            </div>
                        </div>

                            <button type="submit" class="btn btn-primary btn-block shadow-on-touch" style="font-weight: bold; color: black; font-size: 25px; transition: font-size 0.3s;">Təsdiq Et</button>
                            <div class="form-group">
                                <div class="form-check">
                                    <input asp-for="IsRemember" class="form-check-input" type="checkbox" id="isRemember">
                                    <label class="form-check-label" for="isRemember">
                                        Yadda saxla
                                    </label>
                                </div>
                            </div>
                        </form>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>



@section Scripts{
    <!-- Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            // Handle form submission
            $('#registerForm').submit(function (event) {
                // Prevent the default form submission
                event.preventDefault();
                validateForm();
            });
        });

        function validateForm() {
            var isValid = true;
            // Check if any required field is empty
            $('#registerForm input[required]').each(function () {
                if ($(this).val() === '') {
                    isValid = false;
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });

            if (!isValid) {
                // Show alert if any required field is empty using SweetAlert
                Swal.fire({
                    icon: 'error',
                    title: 'Xəta...',
                    text: 'Zəhmət olmasa bütün məcburi sahələri doldurun.'
                });
            } else {
                // Submit the form if all required fields are filled
                $('#registerForm').unbind('submit').submit();
            }
        }
    </script>


    <script>


        function togglePasswordVisibility(passwordId, toggleIconId) {
            var passwordInput = document.getElementById(passwordId);
            var toggleIcon = document.getElementById(toggleIconId);
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }

    </script>

}
